<div style="margin:0 auto;width:75%;text-align:left">
<% provide(:title, 'Sign up') %>
  <h1>Sign up</h1>
    <div class="row">
      <div class="span6 offset3">
        <%= form_for(@user, :html => {:class => 'form-horizontal'})  do |f| %>
          <fieldset>

          <div class = "form-group mb-4">
            <%= f.label :name, :class => "col-sm-2 control-label" %>
              <div class = "col-sm-10">
            <%= f.text_field :name , :class => "form-control" %>
              </div>
          </div>
        

          <div class = "form-group mb-4">
            <%= f.label :password, :class => "col-sm-2 control-label" %>
              <div class = "col-sm-10">
            <%= f.password_field :password , :class => "form-control" %>
              </div>
          </div> 


          <div class = "form-group mb-4">
            <%= f.label :city, :class => "col-sm-2 control-label" %>
              <div class = "col-sm-10">
            <%= f.collection_select :city_id, @cities, :id, :name, include_hidden: false %>
              </div>
          </div>    

        
          <div class = "form-group mb-4">
            <%= f.label :experience_level, :class => "col-sm-2 control-label" %>
              <div class = "col-sm-10">
            <%= f.select :experience, ["I dabble", "Green thumb", "Plant wizard"] %>
              </div>
            </div>
    </div>

      <div class = "form-actions">
        <%= f.submit "Lets Get Growin'", class: "btn btn-large btn-primary" %>
      </div>
    </fieldset>
    <% end %>
    </div>
</div>


