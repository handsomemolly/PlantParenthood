<%= form_with model: @user do |f|%>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <br>
  <%= f.label :password %>
  <%= f.text_field :password %>
  <br>  
  <br>
  <%= f.label :city %>
  <%= f.collection_select :city_id, @cities, :id, :name, include_hidden: false %>
  <br>
  <br>
  <%= f.label :experience_level %>
  <%= f.select :experience, ["I dabble", "Green thumb", "Plant wizard"] %>
  <br>
  <br>
  <%= f.submit "Get growin!" %>
<% end %>